<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cixlabs.pshellse">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ShellActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PreguntaActivity"
            android:label="@string/title_activity_pregunta"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name="ar.com.daidalos.afiledialog.FileChooserActivity" />

        <activity
            android:name=".MuestraInfoActivity"
            android:label="@string/title_activity_muestra_info"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>

</manifest>
